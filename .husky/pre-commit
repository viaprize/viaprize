    cd apps/client && pnpm run format && cd ../../
    echo "Running checks for client..."
    (cd apps/client && pnpm run check-format) || {
        echo 'ğŸ¤¢ğŸ¤®ğŸ¤¢ğŸ¤® Its FOKING RAW - Your styling looks disgusting. ğŸ¤¢ğŸ¤®ğŸ¤¢ğŸ¤®
